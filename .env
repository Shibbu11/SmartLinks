# Production Environment Variables
# Copy these to your Railway environment variables

# Environment
ENVIRONMENT=production
DEBUG=False

# Database (Railway will provide this automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security
SECRET_KEY=your-super-secret-key-here-change-this
ALLOWED_HOSTS=your-domain.railway.app,*.railway.app
CORS_ORIGINS=https://your-frontend.streamlit.app,https://your-domain.railway.app

# AI Settings (Optional)
USE_MOCK_AI=True
# OPENAI_API_KEY=your-openai-key-if-you-want-real-ai

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO